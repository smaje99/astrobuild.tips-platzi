---
import { getCollection } from 'astro:content';

import Card from '@/components/Card.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import Layout from '@/layouts/Layout.astro';

const allPost = await getCollection('greetings');
---

<Layout title='astrobuild.tips'>
  <Header title='astrobuild.tip' />
  <main class='grid justify-center p-2 gap-4'>
    <Hero />
    <ul role='list' class='link-card-grid flex gap-3'>
      {
        allPost.map((post) => (
          <Card
            title={post.data?.title}
            time={post.data?.pubDate}
            tags={post.data?.tags}
          />
        ))
      }
    </ul>
  </main>
</Layout>
